{
  "description": "Tooling for GraphQL. Compare GraphQL Schemas, check documents, find breaking changes, find similar types.",
  "repository": {
    "type": "git",
    "url": "kamilkisiela/graphql-inspector"
  },
  "author": {
    "name": "Kamil Kisiela",
    "email": "kamil.kisiela@gmail.com",
    "url": "https://github.com/kamilkisiela"
  },
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/commands/*",
    "packages/loaders/*",
    "website"
  ],
  "keywords": [
    "graphql",
    "graphql-inspector",
    "tools",
    "cli",
    "api",
    "ui"
  ],
  "scripts": {
    "action": "ncc build packages/action/src/action.ts --out action --minify --transpile-only",
    "build": "tsc && bob build",
    "bundle": "webpack",
    "lint": "eslint --cache --ignore-path .gitignore .",
    "lint:prettier": "prettier --cache --check .",
    "prebuild": "rimraf \"packages/**/dist/\"",
    "precommit": "lint-staged",
    "prerelease": "yarn action",
    "prettier": "prettier --cache --write --list-different .",
    "release": "yarn build && changeset publish",
    "release:canary": "npm run release -- canary",
    "test": "jest"
  },
  "dependencies": {
    "@sentry/node": "7.36.0",
    "@sentry/tracing": "7.36.0",
    "husky": "8.0.3",
    "immer": "9.0.19",
    "probot": "12.3.0",
    "shelljs": "0.8.5"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.0",
    "@theguild/eslint-config": "0.8.0",
    "@theguild/prettier-config": "1.1.1",
    "@types/body-parser": "1.19.2",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/jest": "26.0.24",
    "@types/node": "14.18.36",
    "@types/yargs": "17.0.3",
    "@zeit/ncc": "0.22.3",
    "axios": "0.27.2",
    "bob-the-bundler": "1.7.3",
    "eslint": "8.33.0",
    "graphql": "16.6.0",
    "graphql-config": "4.4.1",
    "jest": "27.5.1",
    "jsesc": "3.0.2",
    "lint-staged": "13.1.1",
    "lodash": "4.17.21",
    "nock": "13.3.0",
    "prettier": "2.8.3",
    "rimraf": "3.0.2",
    "smee-client": "1.2.3",
    "strip-ansi": "6.0.1",
    "ts-jest": "27.1.5",
    "typescript": "4.2.4"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,jsx,mjs,json,md,ts,tsx,graphql,gql,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
